<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/sign.css" />
  <title>Easygo</title>
</head>

<body>
  
  <div id="main">
    <div id="bookingdiv">
      <div class="caraouselslider">
        <i class="fas fa-chevron-left slider slider-left"></i>
        <i class="fas fa-chevron-right slider slider-right"></i>
      </div>
      <img class="bookingimg" src="/img/cloud.jpg" alt="Bad Request" />
      <div class="booking-content">
        <ul class="navbar">
          <a href="">
            <h2 id="logo">EasyGo</h2>
          </a>
          <a href="/">
            <li>HOME</li>
          </a>
          <a href="">
            <li>ABOUT US</li>
          </a>
          <a href="/signin">
            <li>SIGN IN</li>
          </a>
          <a href="/signup">
            <li>SIGN UP</li>
          </a>
        </ul>

      </div>
      <div class="signindiv">
        <div class="sign-up-form">
            <i class="far fa-user-circle fa-4x"></i>
            <h1>Sign In</h1>
            <form class="" action="index.html" method="post">
              <input type="email" class="input-box" placeholder="Your Email">
              <input type="password" class="input-box" placeholder="Your Password">
              <p><span> <input class="check" type="checkbox" > </span>Remember me</p>
              <hr>
             <input class="btn btn-primary" type="submit" value="Submit">
            </form>
            <p style="margin-top: 0.7rem;">Don't  have an account ?&nbsp;<a href="/signup">Sign up</a></p>
          </div>
    </div>
    </div>
  </div>

