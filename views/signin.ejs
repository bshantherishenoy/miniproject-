<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css" integrity="sha384-y3tfxAZXuh4HwSYylfB+J125MxIs6mR5FOHamPBG064zB+AFeWH94NdvaCBm8qnd" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/sign.css" />
  <title>Easygo</title>
</head>

<body>

  <div id="main">
    <div id="bookingdiv">
      <div class="caraouselslider">
        <i class="fas fa-chevron-left slider slider-left"></i>
        <i class="fas fa-chevron-right slider slider-right"></i>
      </div>

      <div class="booking-content">
        <ul class="navbar">
          <a href="">
            <h2 id="logo">EasyGo</h2>
          </a>
          <a href="/">
            <li>HOME</li>
          </a>
          <a href="">
            <li>ABOUT US</li>
          </a>
          <a href="/signin">
            <li>SIGN IN</li>
          </a>
          <a href="/signup">
            <li>SIGN UP</li>
          </a>
        </ul>

      </div>
      <div class="signindiv">
        <div class="sign-up-form">
            <i class="far fa-user-circle fa-4x"></i>
            <h1>Sign In</h1>
            <!-- error message -->
            <% if(errormessages) {%>
            <h6><% if(errormessages.length > 0){%>
              <div class="errormessage">
                <%= errormessages %>
              </div>
            <% } %>
          </h6>
            <% } %>
            <!-- successmesaage -->
            <% if(successmessages) {%>
              <h6><% if(successmessages.length > 0){%>
                <div class="successmessage">
                  <%= successmessages %>
                </div>
              <% } %>
            </h6>
              <% } %>

            <form class="" action="/signin" method="POST">
              <input type="email" name="email" class="input-box" placeholder="Your Email" required>
              <input type="password"  name="password"class="input-box"  id="myInput" placeholder="Your Password" required>
              <input  class="check" type="checkbox" onclick="myFunction()">Show Password
              <p><span> <input class="check" type="checkbox" > </span>Remember me</p>
              <hr>
             <input class="btn btn-primary" type="submit" value="Submit">
            </form>
            <p style="margin-top: 0.7rem;">Don't  have an account ?&nbsp;<a href="/signup">Sign up</a></p>
          </div>
    </div>
    </div>
  </div>
  <script type="text/javascript">
  function myFunction() {
    var x = document.getElementById("myInput");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }

  </script>

  <script src="https://kit.fontawesome.com/eeb68990ce.js" crossorigin="anonymous"></script>
<!-- <script src="/js/availabletickets.js"></script> -->
</body>

</html>
